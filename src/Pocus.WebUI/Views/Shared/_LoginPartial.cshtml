@using Microsoft.AspNetCore.Identity
@using Pocus.Core.Entities

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<nav class="user-account">
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="profile-button" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <img src="~/images/avatar.png" alt="Avatar" class="user-avatar">
            <h2>@UserManager.GetUserName(User)</h2>
        </a>
    }
    else
    {
        <a class="profile-button" asp-area="Identity" asp-page="/Account/Login">
            Login
        </a>
    }
</nav>
