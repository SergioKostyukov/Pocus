@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}

<form asp-controller="Account" asp-action="ConfirmRegister" method="post" autocomplete="off" enctype="multipart/form-data">
    <div class="block">
        <h2>Sign up</h2>

        <label asp-for="Tag" class="form-label" placeholder="tag">Tag</label> @* @Localizer["Tag"] *@
        <input asp-for="Tag" class="form-control" />
        <span asp-validation-for="Tag" class="text-danger"></span>

        <label asp-for="Email" class="form-label" placeholder="email">Email</label> @* @Localizer["Email"] *@
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="Password" class="form-label" placeholder="password">Password</label> @* @Localizer["Password"] *@
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <label asp-for="ConfirmPassword" class="form-label" placeholder="confirm password">ConfirmPassword</label> @* @Localizer["ConfirmPassword"] *@
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

        <button id="login-submit" type="submit">Sign up</button> @* @Localizer["Sign up"] *@
    </div>
</form>

<div class="block">
    <p>Already have an account? <a href="@Url.Action("Login", "Account")">Login</a></p>
</div>

@section Script {
    <script src="~/js/account/login.js" asp-append-version="true"></script>
}
